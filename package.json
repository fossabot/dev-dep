{
  "private": true,
  "name": "dev-dependency-pack",
  "version": "0.0.0",
  "author": "dr-js",
  "license": "MIT",
  "description": "W Â· E Â· B = Webpack + ESLint + Babel",
  "keywords": [
    "Dr",
    "Dr-js",
    "JavaScript"
  ],
  "homepage": "https://github.com/dr-js/dev-dependency-pack#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dr-js/dev-dependency-pack.git"
  },
  "bugs": {
    "url": "https://github.com/dr-js/dev-dependency-pack/issues"
  },
  "scripts": {
    "pack": "npm run pack:check-outdated && npm run pack:clear && npm run pack:all",
    "pack:check-outdated": "node library/index -m co",
    "pack:clear": "dr-js --mode file-modify-delete --argument config/output-gitignore",
    "pack:all": "npm run pack:dev-dep-babel && npm run pack:dev-dep-babel-react && npm run pack:dev-dep-web && npm run pack:dev-dep-web-react && npm run pack:dev-dep-web-react-postcss",
    "pack:dev-dep-babel": "node library/index -c config/dev-dep-babel.json",
    "pack:dev-dep-babel-react": "node library/index -c config/dev-dep-babel-react.json",
    "pack:dev-dep-web": "node library/index -c config/dev-dep-web.json",
    "pack:dev-dep-web-react": "node library/index -c config/dev-dep-web-react.json",
    "pack:dev-dep-web-react-postcss": "node library/index -c config/dev-dep-web-react-postcss.json",
    "library": "cross-env NODE_ENV=production babel source --out-dir library",
    "library-dev": "cross-env NODE_ENV=development babel source --out-dir library --watch",
    "build": "npm run build-clear && npm run library",
    "build-clear": "dr-js --mode file-modify-delete --argument library",
    "start": "npm run library-dev",
    "prepack": "npm run build"
  },
  "engines": {
    "node": ">=8.8.0",
    "npm": ">=5.5.0"
  },
  "devDependencies": {
    "dev-dep-babel": "^0.0.7",
    "dr-js": "^0.6.0-dev.3"
  }
}
